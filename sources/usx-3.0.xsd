      <xs:enumeration value="ndx"/>
      <xs:enumeration value="ord"/>
      <xs:enumeration value="pn"/>
      <xs:enumeration value="png"/>
      <xs:enumeration value="pro"/>
      <xs:enumeration value="qt"/>
      <xs:enumeration value="rq"/>
