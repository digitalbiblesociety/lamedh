      <xs:enumeration value="qac"/>
      <xs:enumeration value="qs"/>
      <xs:enumeration value="add"/>
      <xs:enumeration value="addpn"/>
      <xs:enumeration value="bk"/>
      <xs:enumeration value="dc"/>
