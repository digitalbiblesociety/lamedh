    <xs:sequence>
      <xs:element name="chapter">
        <xs:complexType>
          <xs:attribute name="eid" use="required">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:minLength value="1"/>
                <xs:pattern value="[A-Z1-4]{3} ?[0-9]+"/>
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:group>
  <xs:group name="BookChapterLabel">
