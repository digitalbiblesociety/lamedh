      <xs:enumeration value="xt"/>
      <xs:enumeration value="jmp"/>
      <xs:enumeration value="no"/>
      <xs:enumeration value="it"/>
      <xs:enumeration value="bd"/>
      <xs:enumeration value="bdit"/>
      <xs:enumeration value="em"/>
